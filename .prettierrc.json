{
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "jsxSingleQuote": false,
    "quoteProps": "consistent",
    "printWidth": 80,
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4,
    "trailingComma": "all",
    "useTabs": false,
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "**/*.yml",
            "options": {
                "tabWidth": 2,
                "singleQuote": false,
                "quoteProps": "preserve"
            }
        },
        {
            "files": "**/*.md",
            "options": {
                "tabWidth": -1
            }
        }
    ]
}
